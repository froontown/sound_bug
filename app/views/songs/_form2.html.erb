<div class="">
  <button type="button" name="openModal"><a data-open="submitModal">Edit Song</a></button>
  <div class="reveal" id="submitModal" data-reveal>
    <%= form_for(@song) do |f| %>
      <div class="field">
        <%= f.label :name %><br/>
        <%= f.text_field :name %>
      </div>

      <div class="field">
        <%= f.label :artist %><br/>
        <%= f.text_field :artist %>
      </div>

      <div class="field">
        <%= f.label :description %><br/>
        <%= f.text_field :description %>
      </div>

      <div class="actions">
        <%= f.submit(value="Submit") %>
      </div>
    <% end %>
    <button class="close-button" data-close aria-label="Close modal" type="button">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
</div>
