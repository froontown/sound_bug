<%= form_for(@song) do |f| %>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :artist %><br/>
    <%= f.text_field :artist %>
  </div>

  <div class="field">
    <%= f.label :description %><br/>
    <%= f.text_field :description %>
  </div>

  <div class="actions">
    <%= f.submit(value="Submit") %>
  </div>
<% end %>
