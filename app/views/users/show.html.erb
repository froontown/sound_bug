<div class="row container" id="edit-page">
  <div class="columns large-4 small-12" id="edit-form">
    </br>
    <h3><%= @user.first_name %> <%= @user.last_name %></h3>
    <li>Username: <%= @user.username %></li>
    <br/>

    <h4>Songs Created:</h4>
    <%= binding.pry %>
    <% unless @user.songs.empty? %>
      <ul>
        <% @user.songs.each do |song| %>
          <li><%= link_to "#{song.name}", "/songs/#{song.id}" %></li>
        <% end %>
      </ul>
    <% end %>
  </div>

  <div class="columns large-4 small-12" id="edit-form">
    <br/>
    <br/>
    <p class="image"><%= image_tag @user.avatar %></p>
  </div>
</div>
